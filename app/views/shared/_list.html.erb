<table class="table">
  <tr>
    <% if resource.first.is_a?(Test) %>
      <th class="sort-by-title pointer">
        Title
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th>Level</th>
      <th>Questions number</th>
      <th>Test time</th>
      <th>Actions</th>
    <% else %>
      <th>Body</th>
      <th colspan="3">Actions</th>
    <% end %>
  </tr>

  <%= render resource %>
</table>
