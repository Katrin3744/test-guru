<h1>All tests</h1>
<p>
  <%= link_to 'Badges', admin_badges_path %>
</p>

<p>
  <%= link_to 'New test', new_admin_test_path %>
</p>

<%= render 'shared/errors', resource: @test %>

<table class="table">
  <tr>
    <th class="sort-by-title pointer">
      Title
      <%= octicon 'arrow-up', class: 'text-success hide' %>
      <%= octicon 'arrow-down', class: 'text-success hide' %>
    </th>
    <th>Level</th>
    <th>Questions number</th>
    <th colspan="3">Actions</th>
    <%= render @tests %>
</table>

<h3>Gists</h3>
<table>
  <tr>
    <th>Question</th>
    <th>Gist URL</th>
    <th>User email</th>
    <%= render @gists %>
</table>
