<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, id: :badge_title %><br>
  </p>

  <p>
    <%= form.label :url_icon %><br>
    <%= form.text_field :url_icon, id: :badge_path_icon %><br>
  </p>
  <p class="badge-rule">
    <%= form.label :rule_id %><br>
    <%= form.collection_select :rule_id, Rule.all, :id, :title, prompt: true %><br>
  </p>

  <p class="badge-field-test hide">
    <%= form.label :rule_value %><br>
    <%= form.collection_select :rule_value, Test.all, :id, :title, prompt: true %><br>
  </p>

  <p class="badge-field-category hide">
    <%= form.label :rule_value %><br>
    <%= form.collection_select :rule_value, Category.all, :id, :title, prompt: true%><br>
  </p>

  <p class="badge-field-level hide">
    <%= form.label :rule_value %><br>
    <%= form.number_field :rule_value, in: 0..100, step: 1, prompt: true %><br>
  </p>
  <p><%= form.submit %></p>
<% end %>
