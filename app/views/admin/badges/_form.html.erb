<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, id: :badge_title %><br>
  </p>

  <p>
    <%= form.label :path_icon %><br>
    <%= form.text_field :path_icon, id: :badge_path_icon %><br>
  </p>

  <p>
    <%= form.label :rule_id %><br>
    <%= form.collection_select :rule_id, Rule.all, :id, :title, prompt: true %><br>
  </p>

  <p>
    <%= form.label :params_id %><br>
    <%= form.collection_select :params_id, Test.all, :id, :title, prompt: true %><br>
  </p>

  <p><%= form.submit %></p>
<% end %>
