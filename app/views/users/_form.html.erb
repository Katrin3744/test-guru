<%= form_with model: @user, local: true do |form| %>
  <%= render 'shared/errors', resource: @user %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name, id: :name %><br>
  </p>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email, id: :email %><br>
  </p>

  <p>
    <%= form.label :password %><br>
    <%= form.text_field :password, id: :password %><br>
  </p>

  <p>
    <%= form.label :password_confirmation %><br>
    <%= form.text_field :password_confirmation, id: :user_password_confirmation %><br>
  </p>

  <p><%= form.submit %></p>
<% end %>
